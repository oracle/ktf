# Kernel module implementing a test suite for testing KTF itself
#

KVER = @KVER@
KTF_DIR = @KTF_DIR@
KTF_BDIR = @KTF_BDIR@

-include ktf_gen.mk

ccflags-y += -I$(KTF_DIR)

obj-m := hello.o h2.o h3.o h4.o

ifdef CONFIG_KGDB
obj-m += kgdemo.o
endif

KDIR   := @KDIR@
PWD    := $(shell pwd)

EXTRASYMS := KBUILD_EXTRA_SYMBOLS="$(KTF_BDIR)/Module.symvers"

module:
	$(MAKE) -C $(KDIR) SUBDIRS=$(PWD) $(EXTRASYMS) modules
clean:
	$(MAKE) -C $(KDIR) M=$(PWD) clean

check: all
	$(MAKE) -C $(KDIR) M=$(PWD) C=2
